<% content_for :title, "Import movements" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Import movements to <%= @account.name %></h1>

  <%= form_with(model: @import, url: [@account, @import], class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :file %>
      <%= form.file_field :file, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": @import.errors[:name].none?, "border-red-400 focus:outline-red-600": @import.errors[:name].any?}] %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to "Back to account", accounts_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
